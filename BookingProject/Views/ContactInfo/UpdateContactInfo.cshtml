@model ContactInfo
@{
    ViewData["Title"] = "UpdateContactInfo";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h3 class="card-title">İletişim Bilgisi Güncelleme Sayfası</h3>
            <hr style="color:purple;" />
            <table class="table table-striped">
                <form method="post">
                    <input type="hidden" asp-for="ContactInfoID" />
                    <label>Açıklama</label>
                    <input type="text" class="form-control" asp-for="Description" />
                    <br />
                    <label>Adres</label>
                    <input type="text" class="form-control" asp-for="Adress" />
                    <br />
                    <label>Telefon</label>
                    <input type="text" class="form-control" asp-for="Phone" />
                    <br />
                    <label>Mail</label>
                    <input type="text" class="form-control" asp-for="Email" />
                    <br />
                    <label>Fax</label>
                    <input type="text" class="form-control" asp-for="Fax" />
                    <br />
                    <button class="btn btn-gradient-light btn-rounded btn-fw"></i>Kaydet</button>
                </form>
            </table>
        </div>

    </div>
</div>
