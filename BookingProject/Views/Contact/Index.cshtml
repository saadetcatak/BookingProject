@model List<Contact>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    int count = 0;
}

<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Mesaj</h4>
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th> #</th>
                        <th>İsim</th>
                        <th>Mail</th>
                        <th>Mesaj</th>                      
                        <th>Sil</th>
                        <th>Mesaj Detayı</th>

                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        count++;
                        <tr>
                            <td> @count</td>
                            <td>@item.Name</td>
                            <td>@item.Email</td>
                            <td>@item.MessageContent</td>

                            <td><a href="/Contact/DeleteContact/@item.ContactID" class="btn btn-gradient-danger btn-rounded btn-fw">Sil</a></td>
                            <td><a href="/Contact/DetailContact/@item.ContactID" class="btn btn-gradient-success btn-rounded btn-fw">Detay</a></td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

