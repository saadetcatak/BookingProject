@model Blog
@{
    ViewData["Title"] = "UpdateBlog";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h3 class="card-title">Blog Güncelleme Sayfası</h3>
            <hr style="color:purple;" />
            <table class="table table-striped">
                <form method="post">
                    <input type="hidden" asp-for="BlogID" />
                    <label>Başlık</label>
                    <input type="text" class="form-control" asp-for="BlogName" />
                    <br />
                    <label>Açıklama</label>
                    <input type="text" class="form-control" asp-for="Description" />
                    <br />
                    <label>Görsel</label>
                    <input type="text" class="form-control" asp-for="ImageUrl" />
                    <br />
                    <label>Tarih</label>
                    <input type="text" class="form-control" asp-for="Date" />
                    <br />
                    <button class="btn btn-gradient-light btn-rounded btn-fw"></i>Kaydet</button>
                </form>
            </table>
        </div>

    </div>
</div>

